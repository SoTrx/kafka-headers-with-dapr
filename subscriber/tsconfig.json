{
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "**/*.spec.ts", "dist"],
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/",
    "sourceMap": true,
    //"inlineSources": true,
    "declaration": false,

    "module": "ES2022",
    "target": "ES2019",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src/@types"]
  }
}
